<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">User List</h1>
    <form action="/add" method="POST" class="mb-4">
      <div class="grid grid-cols-3 gap-4">
        <input type="text" name="username" placeholder="Username" class="p-2 border rounded" required>
        <input type="text" name="phone_number" placeholder="Phone Number" class="p-2 border rounded" required>
        <input type="email" name="email" placeholder="Email" class="p-2 border rounded" required>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded mt-2 hover:bg-blue-600">
        Add User
      </button>
    </form>

    <table class="table-auto w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-blue-500 text-white">
        <tr>
          <th class="p-2 text-left">Username</th>
          <th class="p-2 text-left">Phone Number</th>
          <th class="p-2 text-left">Email</th>
          <th class="p-2 text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr class="border-b">
            <td class="p-2"><%= user.username %></td>
            <td class="p-2"><%= user.phone_number %></td>
            <td class="p-2"><%= user.email %></td>
            <td class="p-2 text-center">
              <a href="/edit/<%= user.id %>" class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600">
                Edit
              </a>
              <form action="/delete/<%= user.id %>" method="POST" class="inline">
                <button 
                  type="submit" 
                  class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>